<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="referrer" content="origin" />
    <meta name="viewport" content="width=device-width, minimum-scale=1, maximum-scale=1, user-scalable=no" />
    <link rel="icon" href="~/images/icon.png">
    <title>@ViewBag.Title - Pomelo IcM</title>
    <link href="~/styles/pomelo.base.min.css" rel="stylesheet" />
    <script src="~/scripts/pomelo.base.min.js"></script>
    <script src="~/signalr/js"></script>
    <script src="~/scripts/pomelo.extend.js"></script>
    <script src="~/scripts/Chart.bundle.min.js"></script>
</head>
<body class="home-template fixed-navbar">
    <!-- start header -->
    <header class="main-header">
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <i class="fa fa-list mobile-menu"></i>
                    </button>
                    <!-- start logo -->
                    <a class="navbar-logo" asp-controller="Home" asp-action="Index"><img src="~/images/logo-bk.png" /></a>
                    <!-- end logo -->
                </div>
                @Html.Partial("_Navigator")
            </div>
        </nav>
    </header>
    <!-- end header -->

    <div class="cover cover-single mobile-cover @(IsSectionDefined("Navigator") == false ? "" : "cover-url")">
        <div class="cont-wrap">
            <div class="grid_12 mobile-cover-center" style="text-align:left">
                <img src="~/images/logo.png" class="mobile-cover-img" style="height:140px;margin-top:-60px;" />
            </div>
        </div>
        @if (IsSectionDefined("Navigator"))
        {
            <div class="cover-url-inner">
                <div class="cont-wrap">
                    <div class="grid_12" style="text-align:left">
                        @RenderSection("Navigator")
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="main-content-area">
        <div class="container">
            @Html.Partial("_Sidebar")
            <div class="grid_9">
                @RenderBody()
            </div>
        </div>
    </div>

    @Html.Partial("_Footer")
</body>
</html>